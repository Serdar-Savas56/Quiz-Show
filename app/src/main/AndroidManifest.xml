<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizgame">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Score_Page"></activity>
        <activity android:name=".Quiz_Page" />
        <activity
            android:name=".forgot_Password"
            android:parentActivityName=".Login_page"
            android:theme="@style/AppTheme_Login_Page" />
        <activity
            android:name=".sign_up_page"
            android:parentActivityName=".Login_page"
            android:theme="@style/AppTheme_Login_Page" />
        <activity
            android:name=".Login_page"
            android:theme="@style/AppTheme_Login_Page" />
        <activity
            android:name=".Splash_Screen"
            android:theme="@style/AppTheme_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>